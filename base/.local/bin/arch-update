#!/bin/zsh

if [ "$BLOCK_BUTTON" = "3" ]; then
  # right-click for upgrade
  i3-sensible-terminal -e 'zsh -ic "dialog --colors --yesno \"\\Z1\Zb$(yaourt -Qua)\Zn\n\nUpdate packages?\" 0 0 && clear && yaourt -Syua && yes | yaourt -Scc"'
elif [ -z "$BLOCK_BUTTON" ]; then
  # wait 10s on login/reload
  sleep 10
fi
# check for upgradable packages
arch-update.py -a -q -u '#99734d'
