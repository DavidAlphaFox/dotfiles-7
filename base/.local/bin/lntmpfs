#!/bin/zsh

if [ -e "$HOME/.tmpfs" ]; then
  for dir in $(sort $HOME/.tmpfs); do
    cache_dir="/tmp/.cache-$USER/$dir"
    home_dir="$HOME/$dir"
    mkdir -p "$cache_dir"
    if [ -d "$home_dir" ] && [ ! -L "$home_dir" ]; then
      cp -r "$home_dir/." "$cache_dir/"
      rm -r "$home_dir"
      ln -s "$cache_dir" "$home_dir"
    elif [ ! -L "$home_dir" ]; then
      mkdir -p "$(dirname $home_dir)"
      ln -s "$cache_dir" "$home_dir"
    fi
  done
fi

