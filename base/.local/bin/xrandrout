#!/bin/bash

#xrandr --output eDP1
#xrandr --output eDP-1
#xrandr --output DP1 --auto --right-of eDP1
#xrandr --output HDMI1 --auto
#xrandr --output HDMI2 --auto
#xrandr --output VGA-1 --auto
#xrandr --output VGA-2 --auto --right-of VGA-1

i=1
c=$(xrandr -q | grep ' connected' | wc -l)
for m in $(xrandr -q | grep ' connected' | awk '{print $1}'); do
  sequence=$(seq $(((1+($i-1)*10/c))) $(($i*10/$c)))
  bspc monitor $m -d $(echo ${sequence} | sed 's/10/0/')
  i=$(($i+1))
done

