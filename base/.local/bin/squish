#!/bin/zsh

echo -e "\nğŸ—œï¸   Deduplicating filesystem..."
device="$(findmnt -nvo SOURCE /)"
mntpnt="$(mktemp -d --tmpdir duperemove-XXXXXX)"
mkdir -p $mntpnt
sudo mount $device $mntpnt
pushd -q $mntpnt
sudo duperemove -rdhv .

echo -e "\nğŸ—œï¸   Rebalancing filesystem..."
sudo btrfs balance start -dusage=66 -musage=66 /mnt

popd -q
sudo umount $mntpnt
rmdir $mntpnt

echo -e "\nğŸ—œï¸   Discarding unused blocks..."
sudo fstrim -av

