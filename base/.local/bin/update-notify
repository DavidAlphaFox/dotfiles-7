#!/bin/zsh

UPS="$(checkupdates)"
if [ -n "$UPS" ]; then
  NOTIFY=1
  echo -n 
fi
if [ -z "$NOTIFY" ]; then
  AUPS="$(TERM=linux pacaur -Qua)"
  if [ -n "$AUPS" ]; then
    NOTIFY=1
    echo -n 
  fi
fi
if [ -n "$NOTIFY" ]; then
  notify-info "Updates" "Software updates are available"
else
  exit 1
fi

