set $inactive #985CAA80
# start dmenu (a program launcher)
#bindsym $mod+d exec --no-startup-id rofi -show run
#bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+d exec --no-startup-id "rofi -show run -width 16 -lines 5 -color-normal '$bg,$color8,$bg,$bg,$color12' -color-active '$bg,$fg,$bg,$bg,$bg' -color-window '$bg,$color4,$bg'"
bindsym $mod+Shift+d exec --no-startup-id "rofi -show drun -width 16 -lines 5 -color-normal '$bg,$color8,$bg,$bg,$color12' -color-active '$bg,$fg,$bg,$bg,$bg' -color-window '$bg,$color4,$bg'"

#colors
#class                  border  background  text    indicator       child_border
client.focused          $active   $active    $back   $blue
client.focused_inactive $back     $back      $trans  $back
client.unfocused        $back     $back      $trans  $back
client.urgent           $urg      $urg       $back   $back

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  i3bar_command i3bar -t
  status_command i3blocks -c ~/.config/i3/i3blocks.conf
  position top
  colors {
    background $back
    statusline $trans
		inactive_workspace $back $back $trans
		active_workspace $back $back $trans
		focused_workspace $trans $back $back
  }
  tray_padding 0
  height 32
}

