! URXVT
URxvt.font: xft:DejaVu Sans Mono:size=14
URxvt.boldFont:
URxvt.internalBorder: 8
URxvt.scrollBar: False
URxvt.cursorUnderline: True
URxvt.cursorBlink: True

! XFT
Xft.antialias: 1
Xft.autohint: 1
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! XCURSOR
Xcursor.theme: whiteglass
Xcursor.size: 16

! ROFI
rofi.font: DejaVu Sans Mono 14
rofi.modi:                           window,run,ssh,drun
rofi.width:                          16
rofi.lines:                          5
rofi.columns:                        1
! "border width"
rofi.bw:                             2
rofi.location:                       0
rofi.padding:                        8
rofi.yoffset:                        0
rofi.xoffset:                        0
rofi.fixed-num-lines:                true
rofi.terminal:                       urxvtc
! "margin between rows"
rofi.line-margin:                    2
! "separator style (none, dash, solid)"
rofi.separator-style:                none
rofi.hide-scrollbar:                 true
rofi.fullscreen:                     false
rofi.fake-transparency:              false
rofi.scrollbar-width:                8
! "scrolling method. (0: Page, 1: Centered)"
rofi.scroll-method:                  1

! COLORS
! special
*.foreground:   #bfbfbf
*.background:   #212121
*.cursorColor:  #bfbfbf
! black
*.color0:       #303030
*.color8:       #404040
! red
*.color1:       #804040
*.color9:       #99734d
! green
*.color2:       #408040
*.color10:      #4d9966
! yellow
*.color3:       #808040
*.color11:      #99994d
! blue
*.color4:       #405580
*.color12:      #4d7f99
! magenta
*.color5:       #6a4080
*.color13:      #804d99
! cyan
*.color6:       #408080
*.color14:      #4d9999
! white
