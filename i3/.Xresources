! URXVT
URxvt.font: xft:DejaVu Sans Mono:pixelsize=18
URxvt.letterSpace: -1
URxvt.boldFont:
URxvt.internalBorder: 8
URxvt.scrollBar: False
URxvt.cursorUnderline: True
URxvt.cursorBlink: True

! XFT
Xft.antialias: 1
Xft.autohint: 1
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! ROFI
rofi.font:              Iosevka Term Medium 15
rofi.modi:              window,run,ssh,drun
rofi.width:             32
rofi.lines:             8
rofi.columns:           1
! "border width"
rofi.bw:                2
rofi.location:          0
rofi.padding:           8
rofi.yoffset:           0
rofi.xoffset:           0
rofi.fixed-num-lines:   true
rofi.terminal:          urxvtc
! "margin between rows"
rofi.line-margin:       2
! "separator style (none, dash, solid)"
rofi.separator-style:   none
rofi.hide-scrollbar:    true
rofi.fullscreen:        false
rofi.fake-transparency: false
! "scrolling method. (0: Page, 1: Centered)"
rofi.scroll-method:     1
rofi.color-normal: #212121,#505050,#212121,#212121,#4d9966
rofi.color-active: #212121,#bfbfbf,#212121,#212121,#212121
rofi.color-window: #212121,#405580,#212121

! COLORS
! special
*.foreground:   #bfbfbf
*.background:   #212121
*.cursorColor:  #bfbfbf
! black
*.color0:       #303030
*.color8:       #505050
! red
*.color1:       #804040
*.color9:       #99734d
! green
*.color2:       #408040
*.color10:      #4d9966
! yellow
*.color3:       #758040
*.color11:      #99994d
! blue
*.color4:       #405580
*.color12:      #4d7f99
! magenta
*.color5:       #6a4080
*.color13:      #8c468c
! cyan
*.color6:       #408080
*.color14:      #4d9999
! white
*.color7:       #808080
*.color15:      #bfbfbf
