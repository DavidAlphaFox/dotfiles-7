#!/bin/bash

dir=.dotfiles                    # dotfiles directory
olddir=.old_dotfiles             # old dotfiles backup directory

mkdir -p ~/$olddir

# change to the dotfiles directory
cd ~

for file in `ls ~/$dir | grep -v 'README.md'`; do
    echo ~/$file
    cp -rL ~/.$file ~/$olddir/
    rm -r ~/.$file
    ln -s $dir/$file .$file
done

ln -s /cygdrive/c/Users/$USER .user
ln -s $HOME /home/.admin

for i in Desktop Public Documents Downloads Pictures Music Videos Diagrams Templates; do ln -s .user/$i $i; done

source ~/.bashrc
~/.bin/chere-install
~/.bin/xwin-install


