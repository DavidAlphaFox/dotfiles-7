#!/bin/bash

CYGPIPE="/tmp/cygleaf"
CYGDEPS="$HOME/.dotfiles/.base"
if [ ! -f "$CYGDEPS" ]; then
    touch $CYGDEPS
fi
mkfifo $CYGPIPE
echo -e "\e[0;32mchecking dependencies, please wait\e[1;33m" >&2
cygcheck-dep -pl | tee $CYGPIPE | cat - $CYGDEPS | sort | uniq -u | cat $CYGPIPE - | sort | uniq -d
rm $CYGPIPE
