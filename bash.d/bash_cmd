#!/bin/bash

if ! [ -S "${SSH_AUTH_SOCK}" ]; then
    SSH_FIX_ENV="$HOME/.ssh-agent-fwd.`hostname`"

    if [ -f "${SSH_FIX_ENV}" ]; then
        . "${SSH_FIX_ENV}"
    fi
fi

# prompt colors
T_COLOR="\[\e[32m\]# "
F_COLOR="\[\e[31m\]#! "
W_COLOR="\[\e[34m\]"
if [ -n "$VIM" ]; then
    T_COLOR="\[\e[32m\]@\[\e[1;32m\]* "
fi

if [ ! -O "${PWD}" ]; then
    # writable, dont own
    W_COLOR="\[\e[0;32m\]"
fi

if [ -k "${PWD}" ]; then
    if [ -O "${PWD}" ]; then
        # writable, owned, sticky
        W_COLOR="\[\e[44;30m\]"
    else
        # writable, not owned, sticky
        W_COLOR="\[\e[42;30m\]"
    fi
fi

if [ ! -w "${PWD}" ]; then
    # not writable
    W_COLOR="\[\e[1;31m\]"
fi

if [ ! -e "${PWD}" ]; then
    #non exist
    W_COLOR="\[\e[0;31m\]"
fi

