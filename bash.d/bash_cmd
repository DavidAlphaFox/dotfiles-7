#!/bin/bash

if ! [ -S "${SSH_AUTH_SOCK}" ]; then
    SSH_FIX_ENV="$HOME/.ssh-agent-fwd.`hostname`"

    if [ -f "${SSH_FIX_ENV}" ]; then
        . "${SSH_FIX_ENV}"
    fi
fi

# prompt colors
T_COLOR="\[\033[1;32m\]@ "
F_COLOR="\[\033[0;31m\]@ "
W_COLOR="\[\033[1;34m\]"
if [ -n "$VIM" ]; then
    T_COLOR="\[\033[1;32m\]@\[\033[0;32m\]â‡£ "
fi

if [ -n "$SUPERUSER" ]; then
    T_COLOR="\[\033[1;31m\]@ "
fi

if [ ! -O "${PWD}" ]; then
    # writable, dont own
    W_COLOR="\[\033[1;32m\]"
fi

if [ -k "${PWD}" ]; then
    if [ -O "${PWD}" ]; then
        # writable, owned, sticky
        W_COLOR="\[\033[4;1;34m\]"
    else
        # writable, not owned, sticky
        W_COLOR="\[\033[4;1;32m\]"
    fi
fi

if [ ! -w "${PWD}" ]; then
    # not writable
    W_COLOR="\[\033[0;33m\]"
fi

if [ ! -e "${PWD}" ]; then
    #non exist
    W_COLOR="\[\033[0;31m\]!"
fi

