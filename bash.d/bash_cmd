#!/bin/bash

if ! [ -S "${SSH_AUTH_SOCK}" ]; then
    SSH_FIX_ENV="$HOME/.ssh-agent-fwd.`hostname`"

    if [ -f "${SSH_FIX_ENV}" ]; then
        . "${SSH_FIX_ENV}"
    fi
fi

# prompt colors
T_COLOR="\[\e[32m\]@ "
F_COLOR="\[\e[31m\]@! "
W_COLOR="\[\e[1;33m\]"
if [ -n "$VIM" ]; then
    T_COLOR="\[\e[36m\]@* "
fi

if [ -O "${PWD}" ]; then
    W_COLOR="\[\e[34m\]"
else
    if [ -w "${PWD}" ]; then
        W_COLOR="\[\e[32m\]"
    fi
fi

