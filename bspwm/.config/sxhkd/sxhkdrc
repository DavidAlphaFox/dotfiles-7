## sxhkdrc

# logout, shutdown
super + {shift,ctrl} + q
  mate-session-save --{logout,shutdown}-dialog
# terminal
super + Return
  termsel
# run, applications menus
super + {space,m}
  rofi -show {run,drun} -normal-window
# filemanager
super + f
  termite -e ranger

# calculator
super + c
  galculator

# switch window dialog
super + Tab
  rofi -show window
# switch, move window
super + {_,shift + }{Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}
# close window
super + q
  bspc node -c
# rotate 180
super + r
  bspc node @/ --rotate 180
# focus or move window to desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

# tile/monocle toggle
super + shift + m
  bspc desktop -l next
# tile/float/fullscreen toggle
super + shift + {t,p,s,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# move next/prev ws
super + bracket{left,right}
  bspc desktop -f {prev,next}.local

# screen/window/selection shot
super + {_,shift +,ctrl +} + @Print
  scrot {_,-u,-s} -e "notify-send 'scrot' 'image saved as \n\$f'"

# clipboard select
super + Insert
  clipmenu -p ï‘­

# reload keybindings
super + shift + r
  ~/.local/bin/reload

