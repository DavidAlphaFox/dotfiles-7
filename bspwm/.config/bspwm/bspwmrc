#!/bin/zsh

xrandr --output eDP1
xrandr --output eDP-1
xrandr --output DP1 --auto --right-of eDP1
xrandr --output HDMI1 --auto
xrandr --output HDMI2 --auto
xrandr --output VGA-1 --auto
xrandr --output VGA-2 --auto --right-of VGA-1

bspc monitor eDP1 -d 1 2 3 4 5 6 7 8
bspc monitor eDP-1 -d 1 2 3 4 5 6 7 8
bspc monitor HDMI1 -d 1 2 3 4 5 6 7 8 9 0
bspc monitor VGA-1 -d 1 2 3 4 5
bspc monitor VGA-2 -d 6 7 8 9 0
#btops &

bspc config border_width         2 
bspc config window_gap           0
bspc config split_ratio          0.50 
bspc config borderless_monocle   true 
bspc config gapless_monocle      true 
bspc config focus_follows_pointer false

bspc rule -a Gimp desktop='^8' state=floating follow=on 
bspc rule -a Chromium sticky=off
bspc rule -a Google-chrome sticky=off
bspc rule -a Dia state=floating 
bspc rule -a Ibus-extension-gtk3 state=floating 
bspc rule -a Godot state=floating
bspc rule -a Pavucontrol state=floating
bspc rule -a Nm-connection-editor state=floating
bspc rule -a calfjackhost state=floating
bspc rule -a Calfjackhost state=floating
bspc rule -a "VMPK-Virtual MIDI Piano Keyboard" state=floating
bspc rule -a Galculator state=floating
bspc rule -a "-c" state=floating
bspc rule -a Rofi state=floating
#bspc rule -a termite0 state=floating
bspc rule -a Zathura state=tiled

# xrdb
function get_xrdb() {
  xrdb -query | grep "$1" | awk '{print $2}' | tail -n1
}
xrdb -merge "${HOME}/.Xresources"

# pointer
xsetroot -cursor_name left_ptr

# border color
bspc config normal_border_color "$(get_xrdb color0)"
bspc config focused_border_color "$(get_xrdb color7)"

# compositor
compton -b
# polybar
for m in $(xrandr --query | grep " connected" | cut -d" " -f1); do
  MONITOR=$m polybar --reload archi3 &
done

# keybindings
sxhkd -m -1 &

# background image
if [ -e "$HOME/.fehbg" ]; then
  source "$HOME/.fehbg"
else
  feh --bg-scale "$HOME/Pictures/mountains.jpg"
fi
numlockx on
if [ -e "$HOME/.bspwmrc_local" ]; then
  "$HOME/.bspwmrc_local"
fi

