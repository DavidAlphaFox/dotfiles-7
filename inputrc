
# set vi-like editing mode for bash
set editing-mode vi
set menu-complete-display-prefix on
set show-mode-in-prompt on

$if mode=vi

    #set keymap vi-command
    # vi command mode mappings:
    
    set keymap vi-insert
    # vi insert mode mappings:
    "\C-i": menu-complete
    "\C-l": clear-screen
    "\C-k": kill-line

$endif

