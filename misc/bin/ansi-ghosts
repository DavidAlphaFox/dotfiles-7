#!/bin/bash
#
# ANSI color scheme script by pfh
#
# Initializing mod by lolilolicon from Archlinux
#

f=3 b=4
for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "\e[${!j}${i}m"
  done
done
bld=$'\e[1m'
rst=$'\e[0m'
inv=$'\e[7m'
cat << EOF
 $f0   ▄▄▄   0 $f1   ▄▄▄   1 $f2   ▄▄▄   2 $f3   ▄▄▄   3 $f4   ▄▄▄   4 $f5   ▄▄▄   5 $f6   ▄▄▄   6 $f7   ▄▄▄   7 
